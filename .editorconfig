root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cmd,ps1}]
charset = unset
end_of_line = crlf

[*.{json,yaml,yml}]
indent_size = 2
insert_final_newline = unset

[*.{md,mdx,me,txt}]
indent_size = unset
trim_trailing_whitespace = false
